{
  "mcpServers": {
    "aam-filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/tonychustudio/Documents/aam-orchestration/accounting-automation"
      ],
      "description": "AAM会計システム専用ファイルシステムアクセス"
    },
    "aam-debug-coordinator": {
      "command": "node",
      "args": [
        "/Users/tonychustudio/Documents/aam-orchestration/accounting-automation/src/debug/mcp-servers/aam-debug-coordinator.js"
      ],
      "env": {
        "MONGODB_URI": "${env:MONGODB_URI}",
        "AZURE_FORM_RECOGNIZER_KEY": "${env:AZURE_FORM_RECOGNIZER_KEY}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "DEEPSEEK_API_KEY": "${env:DEEPSEEK_API_KEY}"
      },
      "description": "AAM統合デバッグコーディネーター"
    },
    "aam-ocr-monitor": {
      "command": "node",
      "args": [
        "/Users/tonychustudio/Documents/aam-orchestration/accounting-automation/src/debug/mcp-servers/ocr-agent-monitor.js"
      ],
      "env": {
        "AZURE_FORM_RECOGNIZER_ENDPOINT": "${env:AZURE_FORM_RECOGNIZER_ENDPOINT}",
        "GAS_OCR_URL": "${env:GAS_OCR_URL}"
      },
      "description": "OCRエージェント専用監視"
    },
    "eslint": {
      "command": "npx",
      "args": ["@eslint/mcp@latest"],
      "description": "JavaScript/TypeScript/React静的解析"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "description": "GitHub PR/Issue統合"
    }
  }
}