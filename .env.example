# AI Provider API Keys (Choose one or more)
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/accounting-automation

# Redis Cache (Optional - for performance optimization)
# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Application Settings
NODE_ENV=development
PORT=4111

# Cloudflare R2 Storage (for receipt images)
# Required for scan-receipt image upload feature
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=receipt-images
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev