# ===================================
# 🔴 必須環境変数（新システム用）
# ===================================

# AI/LLM設定（必須）
DEEPSEEK_API_KEY=your-deepseek-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# データベース設定（必須）
MONGODB_URI=mongodb://localhost:27017/accounting-automation
# または MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/accounting
USE_AZURE_MONGODB=true
NEXT_PUBLIC_USE_AZURE_MONGODB=true

# Azure OCR設定（必須）
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-azure-form-recognizer-key

# Mastra設定（必須）
MASTRA_API_SECRET=your-mastra-secret-key
MASTRA_API_PORT=3001

# ===================================
# 🟡 オプション環境変数（拡張機能用）
# ===================================

# MCP拡張機能
PERPLEXITY_API_KEY=your-perplexity-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key
WEBSOCKET_PORT=3001

# 追加OCR機能
HANDWRITING_OCR_API_TOKEN=your-handwriting-ocr-token
ENABLE_OCR=true

# NLWeb統合（オプション）
NLWEB_API_KEY=your-nlweb-api-key
NLWEB_SITE_URL=your-nlweb-site-url
NLWEB_API_ENDPOINT=https://nlweb.jp/api

# GitHub/Vercelデプロイメント（オプション）
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=accounting-automation
VERCEL_TOKEN=your-vercel-token

# DataForSEO（オプション）
DATAFORSEO_API_KEY=your-dataforseo-api-key

# Midscene（オプション）
MIDSCENE_API_KEY=your-midscene-api-key
MIDSCENE_CHROME_EXTENSION_ID=your-chrome-extension-id

# ===================================
# ⚠️ 廃止予定（旧システム用）
# ===================================

# Supabase（廃止予定 - MongoDBに移行）
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=

# Google Cloud（廃止予定 - Azureに移行）
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_PRIVATE_KEY=
# GOOGLE_CLIENT_EMAIL=

# ===================================
# アプリケーション設定
# ===================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================================
# 内部設定（通常は変更不要）
# ===================================

MONGODB_DB_NAME=accounting-automation
MASTRA_API_URL=http://localhost:3001